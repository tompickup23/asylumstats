---
interface SectionLink {
  id: string;
  label: string;
}

interface Props {
  title?: string;
  sections: SectionLink[];
  variant?: "default" | "priority";
}

const { title = "On this page", sections, variant = "default" } = Astro.props;
---

{
  sections.length > 0 && (
    <nav class:list={["page-contents", "section-anchor", { priority: variant === "priority" }]} aria-label={title}>
      <span class="tiny">{title}</span>
      <div class="page-contents-links">
        {sections.map((section, index) => (
          <a href={`#${section.id}`}>
            <span class="page-contents-step">{String(index + 1).padStart(2, "0")}</span>
            <span>{section.label}</span>
          </a>
        ))}
      </div>
    </nav>
  )
}
