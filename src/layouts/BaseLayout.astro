---
import SiteHeader from "../components/SiteHeader.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "UK asylum accountability data on routes, hotels, and public money." } = Astro.props;
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#050812" />
    <meta name="color-scheme" content="dark" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&family=Sora:wght@600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <SiteHeader />
    <div class="shell banner">
      <strong>Live build</strong>
      <span>
        Public pages stay route-specific. Broader council context remains background infrastructure until a row has a
        documented route or scheme link.
      </span>
    </div>
    <main class="shell">
      <slot />
    </main>
    <footer class="shell footer">
      asylumstats tracks UK asylum routes, hotel secrecy, and public money with source-linked evidence, static delivery,
      and clear scope rules about what is publishable.
    </footer>
  </body>
</html>
